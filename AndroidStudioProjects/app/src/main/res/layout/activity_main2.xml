<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="80dp"
            android:textAlignment="textEnd"
            android:paddingHorizontal="30dp" />
    </LinearLayout>

<!-- 7,8,9,/   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/input_7_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_8_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_9_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_div_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="80dp"
            android:layout_marginHorizontal="3dp"
            />
    </LinearLayout>

<!--  4,5,6,*  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/input_4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_5_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_6_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_mul_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textSize="80dp"
            android:layout_marginHorizontal="3dp"
            />
    </LinearLayout>

    <!--  1,2,3,-  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/input_1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_sub_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="80dp"
            android:onClick="onValue"
            android:layout_marginHorizontal="3dp"
            />
    </LinearLayout>

    <!--  =,0,,+  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/input_is_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="80dp"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_0_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="80dp"
            android:layout_marginHorizontal="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            />
        <Button
            android:id="@+id/input_plus_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="80dp"
            android:layout_marginHorizontal="3dp"
            />
    </LinearLayout>

</LinearLayout>